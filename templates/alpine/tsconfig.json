{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": [
      "@cloudflare/workers-types",
      "node",
      "vite/client",
      "@comity/islands"
    ]
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"]
}
