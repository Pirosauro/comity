{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "preact",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "skipLibCheck": false,
    "strict": true,
    "target": "ES2022",
    "types": []
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
