{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "./dist",
    "paths": {
      "~/*": ["./src/*"]
    },
    "skipLibCheck": false,
    "strict": true,
    "target": "ES2022",
    "types": []
  },
  "exclude": ["node_modules"],
  "include": ["./src"]
}
