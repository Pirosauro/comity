{
  "name": "@comity/graphql",
  "version": "0.1.3",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pirosauro/comity.git"
  },
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "clean": "tsc --build --clean",
    "test": "vitest run --coverage"
  },
  "files": [
    "./dist",
    "./types"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "./types"
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@envelop/core": "^5.0.2",
    "graphql": "^16.9.0",
    "hono": "^4.6.13"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.12.2",
    "@types/node": "^20.17.9",
    "@vitest/coverage-v8": "^2.1.8",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  }
}
