{
  "name": "@comity/graphql",
  "version": "0.1.1",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/pirosauro/comity.git"
  },
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "clean": "tsc --build --clean",
    "test": "NODE_OPTIONS='--experimental-vm-modules --experimental-specifier-resolution=node' jest --coverage"
  },
  "files": [
    "./dist",
    "./types"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "typesVersions": {
    "*": {
      "types": [
        "./types"
      ]
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@envelop/core": "^5.0.2",
    "graphql": "^16.9.0",
    "hono": "^4.6.5"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.12.2",
    "@types/jest": "^29.5.13",
    "@types/node": "^20.16.13",
    "jest": "^29.7.0",
    "typescript": "^5.6.3"
  },
  "resolutions": {
    "graphql": "^16.9.0"
  },
  "engines": {
    "node": "20.*"
  },
  "jest": {
    "transform": {},
    "testMatch": [
      "**/tests/unit/**/*.spec.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  }
}
