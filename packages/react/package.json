{
  "name": "@comity/react",
  "version": "0.1.1",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "clean": "tsc --build --clean"
  },
  "files": [
    "./dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@comity/islands": "workspace:*",
    "hono": "^4.6.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.12.2",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.6",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "jest": "^29.7.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.11"
  },
  "engines": {
    "node": "20.*"
  },
  "jest": {
    "transform": {},
    "testMatch": [
      "**/tests/unit/**/*.spec.js(x)?"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "text",
      "cobertura"
    ]
  }
}
