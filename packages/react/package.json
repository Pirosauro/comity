{
  "name": "@comity/react",
  "version": "0.4.1",
  "type": "module",
  "author": "Filippo Bovo <hello@filippobovo.com>",
  "license": "MIT",
  "keywords": [
    "hono",
    "cloudflare",
    "vite",
    "react",
    "partial hydration",
    "island architecture"
  ],
  "scripts": {
    "build": "tsc",
    "prepublish": "tsc",
    "clean": "tsc --build --clean",
    "test": "vitest run --coverage"
  },
  "files": [
    "./dist",
    "types"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.js"
    },
    "./streaming": {
      "node": "./dist/streaming/stream-node.js",
      "default": "./dist/streaming/stream-edge.js"
    }
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "dependencies": {
    "@comity/islands": "workspace:*",
    "hono": "^4.7.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@hono/vite-dev-server": "^0.18.3",
    "@testing-library/react": "^16.2.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.17.28",
    "@types/react": "^18.3.20",
    "@types/react-dom": "^18.3.5",
    "@vitest/coverage-v8": "^3.0.9",
    "jsdom": "^26.0.0",
    "typescript": "^5.8.2",
    "vite": "^6.2.3",
    "vitest": "^3.0.9"
  }
}
