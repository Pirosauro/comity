{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "types": ["node", "vite/client", "./types/virtual-comity-islands.d.ts"]
  },
  "exclude": ["**/*.test.ts"],
  "include": ["src/**/*.ts", "src/**/*.tsx", "types/**/*.d.ts"]
}
